<h1>Listing Companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Country</th>
      <th>Models</th>
      <th>Model Count</th>
      <th>Logo</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.country %></td>
        <td><% company.models.each do |model| %>
              <%= model.name %>
            <% end %></td>
        <td><%= company.models.count %></td>

        <td><%= image_tag "#{company.logo}", width:100 %></td>

        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



